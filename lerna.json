{
  "packages": [
    "packages/*",
    "samples/*"
  ],
  "ignoreChanges": [
    "**/CHANGELOG.md",
    "yarn.lock"
  ],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "npmClient": "npm",
      "allowBranch": "master",
      "conventionalCommits": true,
      "gitRemote": "origin",
      "message": "chore(release): %s"
    },
    "version": {
      "message": "chore(release): release [skip ci]"
    },
    "run": {
      "npmClient": "yarn"
    }
  }
}